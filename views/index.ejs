
<div class="content">
  <div class="content-title">
    <h1>GoMyCode - Todo List!</h1>

    <img src="/public/img/logo-gmc.png" >
  </div>
  <div class="content-main">
    <a href="/addtask"><i class="fa-solid fa-plus-circle"></i>&nbsp;Add Task</a>
  </div>
  <div class="content-list">
    <% if (todos.length !== 0) { %>
      <% todos.forEach((todo, index) => { %>
        <div class="list-item">
          <p>
            <%= index + 1 %>. <%= todo.GoMyCode %>
          </p>
          <div class="list-item-action">
            <a href="/taskedit/<%= todo._id %>">
              <i class="fa-solid fa-pencil"></i>
            </a>
            <form action="/?_method=DELETE" method="post">
              <input type="hidden" name="_id" value="<%= todo._id %>">
              <button type="submit" onclick="return confirm('Delete the selected Task?');"><i class="fa-solid fa-trash-can"></i></button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p style="text-align: center; margin-bottom: 5px;">No Tasks available!</p>
    <% } %> 
  </div>
</div>

